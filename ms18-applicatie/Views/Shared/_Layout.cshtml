<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Mijn Maasgroep18</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/ms18_applicatie.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Mijn Maasgroep18</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Declaraties" asp-action="Index">Declaraties</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Producten" asp-action="Index">Producten</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Ledenbeheer" asp-action="Index">Ledenbeheer</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/swagger">Swagger</a>
                    </li>
                    <li class="nav-item flex-grow-1"></li>
                    <li class="nav-item login-only hidden">
                        <a class="nav-link text-dark" href="#" onclick="logout(); return false;">Log uit</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
        <div id="error" class="hidden"></div>
        <div id="login" class="hidden">
            &nbsp;<br>
            <table class="data-table">
                <tr>
                    <td>E-mailadres</td>
                    <td><input type="email" class="login-email"></td>
                </tr>
                <tr>
                    <td>Wachtwoord</td>
                    <td><input type="password" class="login-password"></td>
                </tr>
                <tr>
                    <td></td>
                    <td><label><input type="checkbox" class="login-guest"> Inloggen als gast</label></td>
                </tr>
                <tr>
                    <td></td>
                    <td><button type="button" class="btn btn-primary login-button">Inloggen</td>
                </tr>
            </table>
        </div>
        <div id="loading" class="hidden">Laden...</div>
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2023 - Maasgroep 18 <br>
        <small class="login-only hidden" id="login-token"></small>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>